<div class="container">
  <h4>Forgot your password?</h4>

  <div style="height: 100vh;">
    <div class="row">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mt-3 mb-3">
            <%= f.label :email, class: 'col-sm-4 control-label' %>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group mt-3 mb-3">
            <div class="col-sm-offset-4 col-sm-8">
              <%= f.submit "Send me reset password instructions", class: 'btn btn-success-custom' %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
