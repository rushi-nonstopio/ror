<div class="container mt-4">
  <h1>Edit Post</h1>

  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group mb-2">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group mb-2">
      <%= form.label :author %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :status %>
      <%= form.select :status, options_for_select([['Draft', 'draft'], ['Published', 'published']], @post.status), class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :published_date %>
      <%= form.date_select :published_date, class: 'form-control' %>
    </div>

    <div class="d-flex justify-content-start align-items-center gap-3">
      <%= form.submit 'Update Post', class: 'btn btn-warning mt-3' %>
      <%= link_to 'Back', posts_path, class: 'btn btn-dark mt-3' %>
    </div>
  <% end %>
</div>
